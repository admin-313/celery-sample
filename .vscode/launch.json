    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI producer debug",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.celery_sample.producer.main:app",
                "--reload"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/celery_sample"
            }
        },
        {
            "name": "Celery consumer debug",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A", "src.celery_sample.consumer.main", "worker",
                "-l", "INFO"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/celery_sample"
            }
        }
    ]
}